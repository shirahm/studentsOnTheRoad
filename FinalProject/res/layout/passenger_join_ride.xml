<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9" >

    <Button
        android:id="@+id/bChooseParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="120dp"
        android:layout_weight="1"
        android:onClick="onClick"
        android:text="יטנוולר פמרט תאיצמל םייפיצפס םירטמרפ רחב" />

    <Button
        android:id="@+id/bWatchAddsForRidesInYourArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:onClick="onClick"
        android:text="ךרוזיאב םיפמרט רובע תועדומב הפצ" />

    <Button
        android:id="@+id/bWatchAllAdds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:onClick="onClick"
        android:text="תועדומה לכב הפצ" />

</LinearLayout>